    <script>
        function combo() {
            var kodesewa = (document.forminput.inputkodesewa.value);
            var namamenyewa = "";
            var hargamenyewa = 0.0;

            if (kodesewa == "ajeb1") {
                namamenyewa = "PLAYSTATION 2";
                hargamenyewa = 100000;
            } else if (kodebarang == "ajeb2") {
                namamenyewa = "PLAYSTATION 3";
                hargamenyewa = 200000;
            } else if (kodemenyewa == "ajeb3") {
                namamenyewa = "PLAYSTATION 4";
                hargamenyewa = 300000;
            } else {
                namamenyewa = "";
                hargamenyewa = 0;
            }

            document.forminput.inputnamamenyewa.value = namamenyewa;
            document.forminput.inputhargamenyewa.value = eval(hargamenyewa);
        }

        function hitungtotal() {
            var hargamenyewa = (document.forminput.inputhargamenyewa.value);
            var jumlahmenyewa = (document.forminput.inputjumlahmenyewa.value);
            var total = 0.0;
            

            total = hargamenyewa * jumlahmenyewa;

            document.forminput.inputtotal.value = eval(total);
        }

        function hitungkembalian() {
            var total = (document.forminput.inputtotal.value);
            var uangbayar = (document.forminput.inputbayar.value);
            var kembalian = 0.0;

            kembalian = uangbayar - total;

            document.forminput.inputkembalian.value = eval(kembalian);
        }

        function simpan() {
            document.forminput.onamapenyewa.value = document.forminput.inputnamapenyewa.value;
            document.forminput.onamabarang.value = document.forminput.inputnamabarang.value;
            document.forminput.ojumlahmenyewa.value = document.forminput.inputjumlahmenyewa.value;
            document.forminput.ototal.value = document.forminput.inputtotal.value;
            document.forminput.odibayar.value = document.forminput.inputbayar.value;
            document.forminput.okembalian.value = document.forminput.inputkembalian.value;
            document.forminput.otglmenyewa.value = document.forminput.inputtglmenyewa.value;
        }
    </script>
